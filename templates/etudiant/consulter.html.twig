<!DOCTYPE html>
<html>
    <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    </head>
    {% include 'header.html.twig' %}
    {% include 'footer.html.twig' %}
    <div class="d-flex justify-content-center align-items-center">
        <h5>PAGE DE CONSULTATION DE L'ELEVE <strong>{{ etudiant.nom }}</strong></h5>
    </div>
    <div class="container">
    <br>
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <td>ID :</td>
                    <td>{{ etudiant.id }}</td>
                </tr>
                <tr>
                    <td>Nom :</td>
                    <td>{{ etudiant.nom }}</td>
                </tr>
                <tr>
                    <td>Pr√©nom :</td>
                    <td>{{ etudiant.prenom }}</td>
                </tr>
                <tr>
                    <td>Date de naissance :</td>
                    <td>{{ etudiant.dateNaiss | date("d/m/Y") }}</td>
                </tr>
                <tr>
                    <td>Rue :</td>
                    <td>{{ etudiant.rue }}</td>
                </tr>
                <tr>
                    <td>Code postal :</td>
                    <td>{{ etudiant.copos }}</td>
                </tr>
                <tr>
                    <td>Ville :</td>
                    <td>{{ etudiant.ville }}</td>
                </tr>
                <tr>
                    <td>Surnom :</td>
                    <td>{{ etudiant.surnom }}</td>
                </tr>
                <tr>
                    <td>Baguette :</td>
                    <td>{{ etudiant.baguette.nom }}</td>
                </tr>
                <tr>
                    <td>Promotion :</td>
                    <td>{{ etudiant.promotion.code }}</td>
                </tr>
                <tr>
                    <td>Maison :</td>
                    <td>{{ etudiant.maison.nom }}</td>
                </tr>
                <tr>
                    <td>Competences : </td>
                    <td>
                        <ul>
                            {% for competence in etudiant.competences %}
                                <li>{{ competence.libelle }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            {% set photo = 'img/etudiant/' ~ etudiant.id ~ '.jpg' %}
            <span class="zoom"><img src="{{ asset(photo | trans) }}" title="{{ etudiant.prenom ~ " " ~ etudiant.nom }}" alt="{{ etudiant.prenom ~ " " ~ etudiant.nom }}" style="width: 200px;" class="rounded-circle"/></span>
        </div>
    </div>
    <a href="http://localhost/webstudent/public/etudiant/lister" class="btn btn-danger">
    Retour LDE
    </a>
    {% if is_granted('ROLE_ADMIN') %}
       <a class="btn btn-primary" href="http://localhost/goat/public/etudiant/supprimer/{{etudiant.id}}">Supprimer</a>
    {% endif %}

</div>
    </body>
</html>