<!DOCTYPE html>
<html>
    <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    </head>
    {% include 'header.html.twig' %}
    {% include 'footer.html.twig' %}
    <div class="d-flex justify-content-center align-items-center">
        <h5>PAGE DE CONSULTATION DU PROF <strong>{{ professeur.nom }}</strong></h5>
    </div>
    <div class="container">
    <br>
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <tr>
                    <td>ID :</td>
                    <td>{{ professeur.id }}</td>
                </tr>
                <tr>
                    <td>Nom :</td>
                    <td>{{ professeur.nom }}</td>
                </tr>
                <tr>
                    <td>Pr√©nom :</td>
                    <td>{{ professeur.prenom }}</td>
                </tr>
                <tr>
                    <td>Date de naissance :</td>
                    <td>{{ professeur.dateNaiss | date("d/m/Y") }}</td>
                </tr>
                <tr>
                    <td>Competences : </td>
                    <td>
                        <ul>
                            {% for competence in professeur.competences %}
                                <li>{{ competence.libelle }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            {% set photo = 'img/professeur/' ~ professeur.id ~ '.jpg' %}
            <span class="zoom"><img src="{{ asset(photo | trans) }}" title="{{ professeur.prenom ~ " " ~ professeur.nom }}" alt="{{ professeur.prenom ~ " " ~ professeur.nom }}" style="width: 200px;" class="rounded-circle"/></span>
        </div>
    </div>
    <a href="http://localhost/webstudent/public/professeur/lister" class="btn btn-danger">
    Retour LDE
    </a>

</div>
    </body>
</html>