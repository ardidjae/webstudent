{% extends 'base.html.twig' %}

{% block title %}Webstudent{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col-md-6">
                <form method="post" class="form-signin">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-success" role="alert">
                            You are logged in as {{ app.user.userIdentifier }}.
                            <a href="{{ path('app_logout') }}" class="alert-link">Logout</a>
                        </div>
                    {% endif %}

                    <img src="/webstudent/public/img/etudiant/ws.png" style="width: 70%; display: block; margin: auto;">
                    <h1 class="h3 mb-3 font-weight-normal">Identifier-vous</h1>
                    <label for="username" class="sr-only">Email :</label>
                    <input type="text" value="{{ last_username }}" maxlength="80" name="_username" id="username" class="form-control" placeholder="Email" autocomplete="email" required autofocus></br>
                    <label for="password" class="sr-only">Mot de passe :</label>
                    <input class="form-control" type="password" name="_password" id="password" class="form-control" placeholder="Password" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"></br>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
